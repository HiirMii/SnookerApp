<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="main_style">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="info">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#00ff06</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="info_horizontal">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#00ff06</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="player_name">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="score">
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="score_horizontal">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ball_buttons">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="game_buttons">
        <item name="android:textColor">@color/color_selector</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="game_buttons_horizontal">
        <item name="android:textColor">@color/color_selector</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="game_buttons_grayscale">
        <item name="android:textColor">@color/color_selector</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="game_buttons_horizontal_grayscale">
        <item name="android:textColor">@color/color_selector</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

</resources>
